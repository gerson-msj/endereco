{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "command": "yarn dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "json server"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "yarn debug",
            "type": "shell",
            "command": "yarn",
            "args": [
                "dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "yarn",
                "pattern": [
                    {
                        "regexp": "^(ERROR|WARNING) \\(([^)]+)\\) (.+):([0-9]+):([0-9]+) - (.+)$",
                        "severity": 1,
                        "file": 3,
                        "line": 4,
                        "column": 5,
                        "message": 6
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE",
                    "endsPattern": "Local"
                }
            },
            "dependsOn": [
                "json server"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "json server",
            "type": "shell",
            "command": "npx",
            "args": [
                "json-server",
                "db.json"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "json server",
                "pattern": [
                    {
                        "regexp": "^(?:File (.*) not found)$",
                        "kind": "file",
                        "file": 1,
                        "message": 0
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "JSON",
                    "endsPattern": "Endpoints"
                }
            }
        }
    ]
}